page {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.details_imagebox {
  width: 100%;
  height: 400rpx;
}

.details_image {
  width: 100%;
  height: 100%;
}

.details_contentbox {
  font-size: 20rpx;
  background-color: #fff;
  margin: 30rpx 0;
  color: #666;
  padding: 20rpx;
}

.content_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 20rpx 0;
}

.title_text {
  font-size: 32rpx;
  font-weight: 700;
}
.details_title_iconbox{
  display: flex;
  justify-content: center;
  align-items: center;
}
.details_title_icon{
  width: 38rpx;
  height: 22rpx;
}

.content_num {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 0;
}

.num_vertical {
  padding: 0 30rpx;
}

.details_bottom {
  padding: 0 30rpx 130rpx 30rpx;
}

.bottom_list {
  box-sizing: border-box;
  width: 100%;
  height: 400rpx;
}

.bottom_list_image {
  width: 100%;
  height: 100%;
}

.details_footer {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  background-color: #fff;
}

.footer_success {
  width: 75%;
  color: #fff;
  font-size: 28rpx;
  background-color: #cc4a4b;
  border-radius: 5rpx;
  margin: 0;
}

.footer_share {
  width: 20%;
  color: #fff;
  font-size: 28rpx;
  background-color: #BBB593;
  border-radius: 5rpx;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1.5;
}

.details_modalbox {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  background-color: rgba(0, 0, 0, 0.7);
}

.detailsmodal {
  box-sizing: border-box;
  width: 80%;
  position: fixed;
  left: 10%;
  top: 25%;
  z-index: 10;
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
}

.modal_remove {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.modal_title {
  font-size: 36rpx;
  margin: 20rpx 0 40rpx 0;
}

.modal_inputbox {
  width: 100%;
  height: 90rpx;
}

.modal_input {
  height: 100%;
  width: 100%;
  background-color: #fff;
  font-size: 26rpx;
  border: 1rpx solid #f1f1f1;
}

.modal_des {
  font-size: 26rpx;
  text-align: left;
  margin: 20rpx 0 40rpx 0;
}

.modal_successbtn {
  color: #fff;
  background-color: #cc4a4b;
  margin: 30rpx 0 10rpx 0;
  font-size: 34rpx;
}
