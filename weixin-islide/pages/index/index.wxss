.box {
  background-color: #f2f2f2;
  padding: 20rpx;
}

.Compilations {
  margin-top: 20rpx;
}

.comImagebox {
  padding: 15rpx 15rpx 0;
  background-color: #fff;
    border-radius: 10rpx;
}

.slide-image, .com-image {
  width: 100%;
  height: 300rpx;
}

.com-image {
  height: 400rpx;
  border-radius: 10rpx;
}

.comcontent {
  padding: 10rpx 20rpx;
  background-color: #fff;
}

.contenttitle {
  font-weight: 700;
  font-size: 45rpx;
}

.contentdes {
  font-size: 30rpx;
  color: #a7a7a7;
}

.operation {

    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;

}
.operationTitle{
 font-size:24rpx;
  padding: 0 28rpx;
  font-weight: 700;
}
.operationBtn{
  color: #cc4a4b;
  font-size: 24rpx;
  background-color: #fff;
  margin: 0;
  line-height: 1.5;
}
.operationBtn::after{
 border: none;

}



.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.weui-search-bar{
  background-color: #F2F2F2;
  border-bottom: none;

}
.weui-search-bar__input{
  height: 32px;
  line-height: 32px;
}